<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".IndexActivity">

<LinearLayout
    android:id="@+id/ll_progress_id"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在授权中，请耐心等待..."
        android:id="@+id/verify_process_id"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="35dp">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/verify_progress_id"
            android:layout_width="match_parent"
            android:progressDrawable="@drawable/progress_bar_color"
            android:layout_height="8dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="6"
            android:layout_marginRight="5dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/rate_info_id"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="0%"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#e9395ebd" />
    </LinearLayout>


</LinearLayout>


<WebView
    android:id="@+id/jingdong_web_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</WebView>
</LinearLayout>
