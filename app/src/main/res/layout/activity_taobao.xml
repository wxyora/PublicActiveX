<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".IndexActivity">

<LinearLayout
    android:id="@+id/ll_progress_id"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在认证中......，请耐心等待。"
        android:id="@+id/verify_process_id"

        android:gravity="center_horizontal"
        android:textColor="#2b4199"
        android:textSize="18dp"
        android:paddingTop="80dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/verify_progress_id"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>


    <WebView
        android:id="@+id/taobao_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>
</LinearLayout>
